<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_li_expenses"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_img2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/order_detail_bill"/>
        <TextView
            android:id="@+id/id_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_img2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/id_img2"
            android:text="账单"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"/>

        <Button
            android:id="@+id/id_btn_rewrite"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/shape_orange_corner_boder_inwithte"
            android:text="修改"
            android:textColor="@color/topicColor"
            android:visibility="visible"/>

    <View
        android:id="@+id/divider_line1"
        android:layout_width="match_parent"
        android:layout_below="@id/id_img2"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_gray">
    </View>
    <LinearLayout
        android:layout_toRightOf="@id/id_img2"
        android:layout_below="@id/divider_line1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/id_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="上门检测费:"
                android:textColor="#333333"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:id="@+id/id_et_detect_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toRightOf="@id/id_text7"
                android:gravity="center|right"
                android:text=""
                android:textColor="#555555"
                android:textSize="@dimen/text_20"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/id_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="配件材料费:"
                android:textColor="#333333"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:id="@+id/id_et_material_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toRightOf="@id/id_text8"
                android:inputType="numberDecimal"
                android:text=""
                android:gravity="center|right"
                android:textColor="#555555"
                android:textSize="@dimen/text_20"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/id_text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="维修服务费:"
                android:textColor="#333333"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:id="@+id/id_serve_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toRightOf="@id/id_text9"
                android:gravity="center|right"
                android:text=""
                android:textColor="#555555"
                android:textSize="@dimen/text_20"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/id_text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="总            计:"
                android:textColor="#333333"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:id="@+id/id_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:text="0.0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_22"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
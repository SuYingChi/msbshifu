<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/margin_70">
    <TextView
        android:id="@+id/id_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="订单编号"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title_tv"/>
    <TextView
        android:id="@+id/id_orderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_toRightOf="@+id/id_text1"
        android:layout_marginLeft="@dimen/margin_25"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title"
        />
    <TextView
        android:id="@+id/id_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_below="@+id/id_text1"
        android:layout_marginTop="@dimen/margin_10"
        android:text="第三方单号"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title_tv"/>
    <TextView
        android:id="@+id/id_third_orderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/id_text1"
        android:layout_toRightOf="@+id/id_text2"
        android:layout_toLeftOf="@+id/id_tv_status"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_10"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title" />
    <TextView
        android:id="@+id/id_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_text2"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15"
        android:text="维修类型"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title_tv"/>
    <TextView
        android:id="@+id/tv_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/id_text2"
        android:layout_toRightOf="@+id/id_text3"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_15"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title"/>
    <TextView
        android:id="@+id/id_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10"
        android:text="服务中"
        android:textSize="@dimen/text_18"
        android:textColor="@color/topicColor"/>
</RelativeLayout>
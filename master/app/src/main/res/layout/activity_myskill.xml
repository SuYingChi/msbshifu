<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.master.FunctionView.ApplyIdentify">
    <include layout="@layout/layout_header"/>
    <TextView
        android:id="@+id/tv_isvalid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="审核技能状态不能修改技能"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="gone"/>
    <com.msht.master.Controls.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.msht.master.Controls.MyRecyclerView
                android:id="@+id/recycler_my_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.msht.master.Controls.MyRecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_common_button"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
            </RelativeLayout>
        </LinearLayout>
    </com.msht.master.Controls.MyScrollview>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_re_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_50">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            android:text="选择工作城市："/>
        <TextView
            android:id="@+id/id_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_text1"
            android:hint="（必选）"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background"/>
    <RelativeLayout
        android:id="@+id/id_re_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_50">
        <TextView
            android:id="@+id/id_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            android:text="可接单区域选择："/>
        <TextView
            android:id="@+id/id_tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_text2"
            android:layout_toLeftOf="@+id/id_img2"
            android:layout_marginRight="@dimen/margin_3"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint="（必填，可多选）"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/id_img2"
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
</LinearLayout>
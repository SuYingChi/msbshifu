<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_wallet_button_img"
            android:layout_width="@dimen/margin_35"
            android:layout_height="@dimen/margin_30"
            android:src="@drawable/my_balance_h"/>

        <TextView
            android:id="@+id/tv_wallet_button_title"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:textColor="#aa000000"
            android:layout_toRightOf="@id/iv_wallet_button_img"
            android:text="我的余额"/>
    </RelativeLayout>

    <TextView
        android:text="1000"
        android:id="@+id/tv_wallet_button_desc"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:textColor="@color/title_tv"
        android:textSize="@dimen/text_18"/>
</RelativeLayout>
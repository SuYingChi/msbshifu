<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.msht.master.FunctionView.AddBankCard">
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请绑定持卡本人的银行卡"
            android:textColor="@color/title"
            android:layout_marginLeft="@dimen/margin_10"
            android:textSize="@dimen/text_18"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:text="银行类型"
            android:textSize="@dimen/text_18"
            android:textColor="@color/title"
            />
        <TextView
            android:text="招商银行"
            android:layout_toRightOf="@id/id_text1"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_18"
            android:layout_marginLeft="20dp"
            android:textColor="@color/desc"
            android:layout_height="wrap_content"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_dropdown_max_height="350dp"
            android:visibility="gone"
            app:ms_dropdown_height="wrap_content"
            app:ms_background_color="@color/snow"
            android:textSize="@dimen/text_18"
            android:layout_marginRight="@dimen/margin_70"
            android:layout_toRightOf="@+id/id_text1"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_orange_border_editview"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:text="银行卡号"
            android:textSize="@dimen/text_18"
            android:textColor="@color/title"
            />
        <EditText
            android:id="@+id/id_et_cardNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text2"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入您要绑定的银行卡号"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:id="@+id/id_re_replace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/id_btn_ok"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@drawable/bg_common_button"
            android:text="确定提交"
            android:textSize="@dimen/text_18"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>

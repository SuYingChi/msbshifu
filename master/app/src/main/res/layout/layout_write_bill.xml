<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_tip_detect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="检测费："
                android:textColor="@color/title"
                android:textSize="@dimen/text_16"/>
            <EditText
                android:id="@+id/et_detect"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/id_yuan1"
                android:paddingRight="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_toRightOf="@id/tv_tip_detect"
                android:background="@drawable/shape_white_border_rectangle"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/title_tv"
                android:textSize="@dimen/text_18"/>
            <TextView
                android:id="@+id/id_yuan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_tip_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="材料费："
                android:textColor="@color/title"
                android:textSize="@dimen/text_16"/>
            <EditText
                android:id="@+id/et_material"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/id_yuan2"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_toRightOf="@id/tv_tip_material"
                android:paddingRight="@dimen/margin_10"
                android:background="@drawable/shape_white_border_rectangle"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/title_tv"
                android:textSize="@dimen/text_18"/>
            <TextView
                android:id="@+id/id_yuan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_tip_serve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="服务费："
                android:textColor="@color/title"
                android:textSize="@dimen/text_16"/>
            <EditText
                android:id="@+id/et_serve"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/id_yuan3"
                android:layout_marginRight="@dimen/margin_15"
                android:paddingRight="@dimen/margin_10"
                android:layout_toRightOf="@id/tv_tip_serve"
                android:background="@drawable/shape_white_border_rectangle"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/title_tv"
                android:textSize="@dimen/text_18"/>
            <TextView
                android:id="@+id/id_yuan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_48">
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_yuan4"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="0.0"
                android:textColor="@color/topicColor"
                android:textSize="@dimen/text_20"/>
            <TextView
                android:id="@+id/id_yuan4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="总    计："
                android:textColor="@color/title_tv"
                android:textSize="@dimen/text_16"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
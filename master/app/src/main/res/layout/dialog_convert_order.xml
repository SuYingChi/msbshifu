<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_45"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="转单原因"
            android:gravity="center"
            android:textSize="@dimen/text_22"
            android:textColor="@color/topicColor"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/lightpink"></View>
    <RadioGroup
        android:id="@+id/id_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/id_radioOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:button="@null"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:text="用户不能接受维修价格"
            android:textSize="@dimen/text_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray">
        </View>
        <RadioButton
            android:id="@+id/id_radioTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:button="@null"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:text="预约时间师傅无法上门服务"
            android:textSize="@dimen/text_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray">
        </View>
        <RadioButton
            android:id="@+id/id_radiotThird"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:button="@null"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:text="缺少专业维修工具"
            android:textSize="@dimen/text_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray">
        </View>
        <RadioButton
            android:id="@+id/id_radioFour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:button="@null"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:text="没有合适的配件"
            android:textSize="@dimen/text_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray">
        </View>
        <RadioButton
            android:id="@+id/id_radioFive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:button="@null"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:text="撤销订单"
            android:textSize="@dimen/text_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray">
        </View>
        <RadioButton
            android:id="@+id/id_radioSix"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:button="@null"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:drawablePadding="@dimen/margin_45"
            android:text="其他原因"
            android:textSize="@dimen/text_16"/>
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray">
    </View>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <EditText
           android:id="@+id/id_other_reason"
           android:layout_marginTop="@dimen/margin_15"
           android:layout_marginBottom="@dimen/margin_15"
           android:layout_width="match_parent"
           android:hint="请输入其他原因"
           android:layout_height="@dimen/margin_35"
           android:layout_marginLeft="@dimen/margin_30"
           android:layout_marginRight="@dimen/margin_30"
           android:background="@drawable/shape_orange_border_editview"/>
   </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_20"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/line_gray">
        </View>
        <Button
            android:id="@+id/id_ok"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="@color/topicColor"
            android:textSize="@dimen/text_20"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/background">
    <!--我的资料-->
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="@dimen/margin_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:text="手机号"
            android:textSize="@dimen/text_18"/>
        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textColor="@color/desc"
            android:text=""
            android:textSize="@dimen/text_18"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="@dimen/margin_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:text="姓名"
            android:textSize="@dimen/text_18"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textColor="@color/desc"
            android:text=""
            android:textSize="@dimen/text_18"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="@dimen/margin_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:text="性别"
            android:textSize="@dimen/text_18"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textColor="@color/desc"
            android:text=""
            android:textSize="@dimen/text_18"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="@dimen/margin_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:text="身份证号"
            android:textSize="@dimen/text_18"/>
        <TextView
            android:id="@+id/tv_idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textColor="@color/desc"
            android:text=""
            android:textSize="@dimen/text_16"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="@dimen/margin_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:text="员工编号"
            android:textSize="@dimen/text_18"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textColor="@color/desc"
            android:text=""
            android:textSize="@dimen/text_16"/>
    </RelativeLayout>
    <com.msht.master.Controls.ImageTextButton
        android:layout_marginTop="10dp"
        android:id="@+id/btn_my_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_imagetext_button"
        android:clickable="true"
        app:ImageRight="@drawable/forward_2x"
        app:text="我的技能"
        app:textColor="#333333"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <com.msht.master.Controls.ImageTextButton
        android:id="@+id/btn_my_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_imagetext_button"
        android:clickable="true"
        app:ImageRight="@drawable/forward_2x"
        app:text="我的证书"
        app:textColor="#333333"/>

</LinearLayout>

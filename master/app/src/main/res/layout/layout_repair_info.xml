<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_15"
            android:text="预约时间"
            android:textSize="@dimen/text_16"
            android:textColor="@color/title_tv"/>
        <TextView
            android:id="@+id/id_appoint_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_toRightOf="@+id/id_text1"
            android:layout_marginLeft="@dimen/margin_25"
            android:textSize="@dimen/text_16"
            android:textColor="@color/title"/>
        <TextView
            android:id="@+id/id_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_below="@+id/id_text1"
            android:layout_marginTop="@dimen/margin_10"
            android:text="问题描述"
            android:textSize="@dimen/text_16"
            android:textColor="@color/title_tv"/>
        <TextView
            android:id="@+id/id_tv_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text2"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_below="@+id/id_text1"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/text_16"
            android:textColor="@color/title"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_recycler_photo"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_layout_order_mome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10"
            android:background="@color/background_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10">
            <TextView
                android:id="@+id/id_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="备注内容"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_below="@+id/id_text3"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_item_work_order"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="订单编号:"
            android:textColor="@color/title"
            android:textSize="@dimen/text_16"/>
        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/tv_text1"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="00000000123"
            android:textSize="@dimen/text_14"
            android:textColor="@color/desc"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_alignParentRight="true"
            android:text="16-12-21 232442"
            android:textColor="@color/title_tv"
            android:textSize="@dimen/text_12"/>
        <TextView
            android:id="@+id/id_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text1"
            android:layout_marginTop="@dimen/margin_10"
            android:text="维修类型:"
            android:textColor="@color/title"
            android:textSize="@dimen/text_16"/>
        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text2"
            android:layout_below="@id/tv_text1"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="空调维修"
            android:textColor="@color/title"
            android:textSize="@dimen/text_16"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_order_list_status"
            android:layout_centerVertical="true"
            android:text="已完成"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_text2"
            android:layout_marginTop="@dimen/margin_10"
            android:text="服务地址:"
            android:textColor="@color/title"
            android:textSize="@dimen/text_16"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/tv_status"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_text3"
            android:layout_below="@+id/id_text2"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="海南大学测试啊"
            android:textColor="@color/desc"
            android:textSize="@dimen/text_16"/>
        <TextView
            android:id="@+id/id_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:textSize="@dimen/text_16"
            android:textColor="@color/title"
            android:text="联  系  人:"/>
        <TextView
            android:id="@+id/id_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text4"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_below="@+id/tv_text3"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="陈宏"
            android:textSize="@dimen/text_16"
            android:textColor="@color/title"/>
    </RelativeLayout>
</RelativeLayout>
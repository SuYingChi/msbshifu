<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_20"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_45"
            android:background="@drawable/shape_top_right_left_corner">
            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="保修卡"
                android:textSize="@dimen/text_20"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/topicColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_qixian_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="保修期限"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title"/>
            <EditText
                android:id="@+id/id_et_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_35"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_toRightOf="@+id/id_qixian_title"
                android:layout_toLeftOf="@+id/id_day"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_35"
                android:layout_marginBottom="@dimen/margin_35"
                android:background="@drawable/shape_white_border_rectangle"/>
            <TextView
                android:id="@+id/id_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="天"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/id_re_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_45">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/topicColor"/>
            </RelativeLayout>
            <View
                android:layout_width="0.8dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>
            <RelativeLayout
                android:id="@+id/id_re_ensure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_45">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确定"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/topicColor"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
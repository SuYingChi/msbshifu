<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/rl_choose"
    android:layout_height="@dimen/margin_50"
    android:background="@drawable/bg_item_work_order">

    <TextView
        android:id="@+id/id_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="本月订单收入："
        android:textSize="@dimen/text_16"/>

    <TextView
        android:id="@+id/id_month_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toRightOf="@+id/id_text2"
        android:textSize="@dimen/text_16"/>
    <RelativeLayout
        android:id="@+id/id_re_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10">

        <TextView
            android:id="@+id/id_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/topicColor"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@id/id_month"
            android:src="@drawable/calendar_h"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
</RelativeLayout>


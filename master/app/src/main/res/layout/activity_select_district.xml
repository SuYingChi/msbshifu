<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_district"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.master.FunctionView.SelectDistrict">
    <include layout="@layout/layout_header"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <com.msht.master.Controls.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.msht.master.Controls.MyRecyclerView
                android:id="@+id/id_district_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.msht.master.Controls.MyRecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray">
                <Button
                    android:id="@+id/id_btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_70"
                    android:layout_marginRight="@dimen/margin_50"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:background="@drawable/bg_common_button"
                    android:text="чбошод"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </LinearLayout>
    </com.msht.master.Controls.MyScrollview>
</LinearLayout>

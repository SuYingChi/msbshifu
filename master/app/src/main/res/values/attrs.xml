<?xml version="1.0" encoding="utf-8"?>
<resources >
    <declare-styleable name="slideswitch">
        <attr name="themeColor" format="color" />
        <attr name="isOpen" format="boolean" />
        <attr name="shape">
            <enum name="rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="listViewAttr">
        <attr name="isDropDownStyle" format="boolean" />
        <attr name="isOnBottomStyle" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ImageTextButton">
        <attr name="text" format="string"/>
        <attr name="ImageLeft" format="reference"/>
        <attr name="ImageRight" format="reference"/>
        <attr name="HasRightImage" format="boolean"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="borderWidth" format="dimension">
        </attr>
        <attr name="offBorderColor" format="reference|color">
        </attr>
        <attr name="offColor" format="reference|color">
        </attr>
        <attr name="onColor" format="reference|color">
        </attr>
        <attr name="spotColor" format="reference|color">
        </attr>
        <attr name="animate" format="reference|boolean">
        </attr>
    </declare-styleable>
    <declare-styleable name="WalletButton">
        <attr name="imgsrc" format="reference|color"/>
        <attr name="Title" format="string"/>
        <attr name="desc" format="string"/>
    </declare-styleable>
    <declare-styleable name="MyFragmentButton">
        <attr name="img" format="reference|color"/>
        <attr name="title2" format="string"/>
    </declare-styleable>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="color_text_normal" format="color"/>
        <attr name="color_text_highlightcolor" format="color"/>
    </declare-styleable>
    <declare-styleable name="MyRadioButton">
        <attr name="rbDrawableLeftWidth" format="dimension"/>
        <attr name="rbDrawableLeftHeight" format="dimension"/>
        <attr name="rbDrawableLeft" format="reference"/>
        <attr name="rbDrawableRight" format="reference"/>

    </declare-styleable>


</resources>